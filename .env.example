# HealthGuard Environment Configuration
# Copy this file to .env and fill in the values:
#   cp .env.example .env

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_DB=healthguard
POSTGRES_USER=healthguard
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# =============================================================================
# TimescaleDB (Time-series sensor data)
# =============================================================================
TIMESCALEDB_DB=healthguard_timeseries
TIMESCALEDB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# =============================================================================
# Django
# =============================================================================
SECRET_KEY=CHANGE_ME_GENERATE_WITH_python_c_from_django_core_management_utils_import_get_random_secret_key_print_get_random_secret_key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,cloud-api

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://redis:6379/1

# =============================================================================
# MQTT
# =============================================================================
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883

# =============================================================================
# Email (SendGrid)
# =============================================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@healthguard.com
SENDGRID_FROM_NAME=HealthGuard

# =============================================================================
# SMS (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Push Notifications (Firebase)
# =============================================================================
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=
FCM_SERVER_KEY=

# =============================================================================
# OAuth2
# =============================================================================
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=
MICROSOFT_OAUTH2_CLIENT_ID=
MICROSOFT_OAUTH2_CLIENT_SECRET=

# =============================================================================
# Frontend
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Webhooks
# =============================================================================
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3

# =============================================================================
# MFA
# =============================================================================
MFA_ISSUER_NAME=HealthGuard
MFA_REQUIRED_FOR_ADMINS=True

# =============================================================================
# Password Reset
# =============================================================================
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=24
SUPPORT_EMAIL=support@healthguard.com

# =============================================================================
# Privacy & Anonymization (OSFI â€” REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# =============================================================================
ANONYMIZATION_SALT=CHANGE_ME_GENERATE_WITH_secrets_token_hex_32

# =============================================================================
# Intelligence Service (inspection ingest bridge)
# URL of the running services/intelligence FastAPI service
# =============================================================================
INTELLIGENCE_SERVICE_URL=http://intelligence:8001
