{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.[project-domain]/v1/inspections.json",
  "title": "Inspection",
  "description": "An official health department inspection record",
  "type": "object",
  "x-sensitivity": "public",
  "required": ["id", "establishment_id", "inspected_at", "inspection_type"],
  "properties": {
    "id": { "type": "string" },
    "establishment_id": { "type": "string" },
    "external_id": {
      "type": "string",
      "description": "ID assigned by the health department source system"
    },
    "source_jurisdiction": {
      "type": "string",
      "description": "e.g. 'LA County Environmental Health', 'NYC DOHMH'"
    },
    "inspection_type": {
      "type": "string",
      "enum": ["routine", "follow_up", "complaint", "pre_opening", "reinspection", "special"]
    },
    "inspected_at": { "type": "string", "format": "date-time" },
    "score": {
      "type": ["integer", "null"],
      "minimum": 0,
      "maximum": 100
    },
    "grade": {
      "type": "string",
      "enum": ["A", "B", "C", "P", "X", ""]
    },
    "passed": { "type": ["boolean", "null"] },
    "closed": { "type": "boolean", "default": false },
    "closure_reason": { "type": "string" },
    "reopened_at": { "type": ["string", "null"], "format": "date-time" },
    "report_url": { "type": "string", "format": "uri" },
    "violations": {
      "type": "array",
      "items": { "$ref": "#/$defs/violation" }
    },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "$defs": {
    "violation": {
      "type": "object",
      "required": ["description", "severity"],
      "properties": {
        "code": { "type": "string" },
        "description": { "type": "string" },
        "severity": {
          "type": "string",
          "enum": ["critical", "serious", "minor", "observation"]
        },
        "violation_status": {
          "type": "string",
          "enum": ["observed", "corrected_on_site", "not_corrected", "repeat"]
        },
        "category": { "type": "string" },
        "location_description": { "type": "string" },
        "notes": { "type": "string" },
        "corrective_action": { "type": "string" },
        "points_deducted": { "type": ["integer", "null"] }
      }
    }
  },
  "additionalProperties": false
}
